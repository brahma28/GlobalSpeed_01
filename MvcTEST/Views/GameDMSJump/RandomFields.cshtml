                //} else {
                //    ss = ss + ',' + ($(this).text());
                //    ssID = ssID + ',' + (sss.replace('fld', ''));
                //}
                A1.push($(this).text());
                A2.push($(this).attr('id').replace('fld', ''));

                $('#log').attr('name', A1.toString());
                $("p").html(A1.toString());
                $('#logID').attr('name', A2.toString());
        //alert(A1 +'-'+A2);
    });
    $("#del").click(function () {
        A1.pop();
        $("p").html(A1.toString());
        A2.pop();
        $('#log').attr('name', A1.toString());
        $('#logID').attr('name', A2.toString());
    });
