@model IEnumerable<MvcTEST.Models.tblUser>
@using MvcTEST.HtmlHelpers
@{
    
    Layout = null;
    ViewBag.Title = "User_Search";
}

<table style="width:100%">
    <tr>
        <td style="width:420px">
            <!-- part 1: GRUPPEN -->
            <!-- exec [getGroupByUser] null -->
            <div id="groups" style="padding:10px;position: relative; z-index: 1; -moz-box-shadow: 3px 3px 5px 6px #000; -webkit-box-shadow: 3px 3px 5px 6px #000; box-shadow: 0px 0px 20px 0px gray; border: 0px solid; border-radius: 10px; -moz-border-radius: 10px; background-color: #FFF;">
                <text><b><font color="#0360a3" size="5">@Html.Translate("GRUPPE").ToUpper()</font></b></text>
                <br />
                <hr />
                <div id="groupsin" style="height: 310px; position: inherit; background-color: #FFF; overflow-y: scroll; overflow-x: hidden; padding-right:10px">
                    <table style="width: 260px; line-height: 13px; border: 0; height: 360px;">

                        @{ foreach (MvcTEST.Models.getGroupByUser_Result item2 in @ViewBag.groups)
                            {  <tr>

                                <td style="text-align: left;">
                                    <a href="@(Url.Content("~/Groupe/Details/") + item2.ID.ToString())">
                                        <font color="black">

                        @item2.Name 

                            </font>

                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td align="left">
                                    <hr />
                                </td>
                            </tr>   
                            }}
                    </table>
                </div>
            </div>
        </td>
        <!-- part 2: BENUTZER -->
        <!-- exec [getPlayerByUser] null -->
        <td style="width:420px;padding-left:20px">
            <div id="players" style="text-align:left;padding:10px;position: relative; z-index: 1; -moz-box-shadow: 1px #000; -webkit-box-shadow: 1px #000; box-shadow: 0px 0px 10px 0px gray; border: 0px solid; border-radius: 10px; -moz-border-radius: 10px; background-color: #FFF;">
                <text><b><font color="#0360a3" size="5">@Html.Translate("SPIELER")</font></b></text>
                <br />
                <hr />
                <div id="playersin" style="height: 310px; position: inherit; background-color: #FFF; overflow-y: scroll; overflow-x: hidden;padding-right:10px">
                    <table style="text-align: left; width: 260px; line-height: 13px; border: 0; height: 360px;">
                        @{ foreach (MvcTEST.Models.getPlayerByUser_Result item3 in @ViewBag.players)
                            {  <tr>
                                <td style="text-align: left;">
                                    <a href="@(Url.Content("~/User/Details/") + item3.ID.ToString())">
                                        <text><font color="black">@item3.Name </font></text></td>
                            </tr>
                            <tr>
                                <td align="left">
                                    <hr />
                                </td>
                            </tr>       
                            }}
                    </table>
                </div>
            </div>

        </td>
    </tr>
</table>
