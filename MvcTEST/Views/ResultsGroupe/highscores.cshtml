                                    <td>
                                        @Html.DisplayFor(modelItem => item2.Rezultat)
                                    </td>
                                </tr>                   
                                <tr>
                                    <td colspan="4">
                                         <hr />
                                    </td>
                                </tr>    
                            }
                            }
                            </table>      
                         </td>                                                          
                     </tr>
                 </table>   
            </div>

