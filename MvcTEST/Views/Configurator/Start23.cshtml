        </tr>
        <tr>
            <td align="left" colspan="3">
                <hr />
            </td>
        </tr>
        <tr>
            <td style="text-align:left ;">
                <font size="2">Die Startenheit ist ebenfalls als Messtelle zu zahlen.</font>
            </td>
        </tr>
        <tr>
            <td style="text-align:left ;">
                <div id="fieldnumber" class="editor-field" style="width: 150px;">
                    @*<input value="5" style="border:none; font-size:larger; width: 100px; color:gray;"/>*@
                    @Html.TextBoxFor(model => model.FieldsNo, new {id = "fieldsNo",  style = "width:100px; color:gray; border:none; font-size:larger;" })
                </div>
            </td>
        </tr>
        <tr>
            <td style="text-align:left ;"><br />
            </td>
        </tr>
        <!-- 3. -->
        <tr>
            <td style="text-align:left ; vertical-align:bottom; " colspan="2" >
                <font size="4"><b>2.</b> Womit mochten Sie die Messung starten?</font>
            </td>

        </tr>
        <tr>
            <td align="left" colspan="3">
                <hr />
            </td>
        </tr>

        <!-- 3 vrste startnih ploča -->
        <tr>
            <td>
                                <table style="width: 100%; text-align: center; height:250px; ">
                                        @*@using (Html.BeginForm())*@
                                        @{ 
                                            //foreach (var item2 in Model)
                                            {                                      
                                            <tr>
                                                <td>
                                                    <div>
                                                        <img src="~/ImagesApp/pocetak2.png" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        <img src="~/ImagesApp/pocetak4.png" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        <img src="~/ImagesApp/pocetak2paralel.png" />
                                                    </div>
                                                </td>   
                                            </tr>
                                            <tr>
                                                <td style="width: 150px; ">
                                                    @Html.RadioButton("rb", Model.StratfieldDouble, Model.StratfieldDouble==true?true:false, new {id = "rbStratfieldDouble", style = "color:#0360a3; " } )
                                                
                                                </td>    
                                                <td style="width: 150px">
                                                    @Html.RadioButton("rb", Model.StratfieldFourfold, Model.StratfieldFourfold==true?true:false, new {id = "rbStratfieldFourfold"})
                                                </td>
                                                <td style="width: 150px">
                                                    @Html.RadioButton("rb", Model.StartfieldPhotocell, Model.StartfieldPhotocell==true?true:false, new {id = "rbStartfieldPhotocell"})
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="width: 150px">
                                                    <font size="5" style="color: #0360a3"; font-family: 'Open Sans', sans-serif;><b>
                                                    Doppel-Startplatte
                                                    </b></font>
                                                </td>    
                                                <td style="width: 150px">
                                                    <font size="5" style="color: #0360a3"; font-family: 'Open Sans', sans-serif;><b>
                                                    Vierfach-Startplatte
                                                    </b></font>
                                                </td>
                                                <td style="width: 150px">
                                                    <font size="5" style="color: #0360a3"; font-family: 'Open Sans', sans-serif;><b>
                                                    Lichtschranke
                                                    </b></font>
                                                </td>
                                            </tr>
                                            }}
                                    </table>
