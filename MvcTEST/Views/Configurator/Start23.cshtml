                            </td>
                        </tr>
                    </table>

                    <!-- tabela sa gumbima -->
                    <table style="width:100%; " >
                        <tr>
                            <!-- NATRAG -->
                            <td align="left"  >
                                <a href="/Configurator/Start">
                                    <img src="~/ImagesApp/gumb_natrag.png" />
                                </a>
                            </td>
                            <!-- OK -->
                            <td style="text-align:right;">
                                <a href="/Configurator/Start24">
                                    <img src="~/ImagesApp/gumb_ok.png" />
                                </a>
                            </td>
                        </tr>
                    </table>

                </div>
            </td>
        <!-- EXEC setFormOfStartField-->
        <script>
            $(document).ready(function () {

                $('#rbStratfieldDouble').click(function () {
                    //
                    $.post('@Url.Action("AjaxSetFormOfStartField", "Configurator")', { radiobutton: 'Double' },
                         function (data) {
                         });
                });
                $('#rbStratfieldFourfold').click(function () {
                    //
                    $.post('@Url.Action("AjaxSetFormOfStartField", "Configurator")', { radiobutton: 'Four' },
                         function (data) {
                         });
                });
                $('#rbStartfieldPhotocell').click(function () {
                    //
                    $.post('@Url.Action("AjaxSetFormOfStartField", "Configurator")', { radiobutton: 'Photo' },
                         function (data) {
                         });
                });
                $('#fieldsNo').focusout(function () {
                    //
                    $.post('@Url.Action("AjaxSetFieldNo", "Configurator")', { fieldno:  $('#fieldsNo').val() },
                         function (data) {
                         });
                });
            });
            </script>



        </tr>
    </table>

</div>







